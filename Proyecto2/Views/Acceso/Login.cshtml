@{
    ViewData["Title"] = "Home Page";
}


<div class="container content_login">
    <div class="d-flex justify-content-center align-items-center h-100">
        <div class="row">
            <div class="col-xs-6 col-md-6 d-flex justify-content-center align-items-center mb-3">
                <img class="w-100" src="~/images/fitness.jpg">
            </div>
            <div class="col-xs-6 col-md-6 d-flex-column justify-content-center form_container mb-3">

                <div class="d-flex justify-content-center align-items-center mb-3">
                    <img class="w-25" src="~/images/person-circle.svg" />
                </div>

                <form action="@Url.Action("Login","Acceso")" method="post">
                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        </div>
                        <input required type="text" name="Correo" class="form-control input_user" value="" placeholder="Correo">
                    </div>
                    <div class="input-group mb-2">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input required type="password" name="Contrasena" class="form-control input_pass" value="" placeholder="Contraseña">
                    </div>

                    @if (ViewData["Mensaje"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewData["Mensaje"]
                        </div>
                    }

                    <div class="d-flex justify-content-center mt-3 login_container">
                        <button type="submit" name="button" class="btn login_btn">Iniciar Sesion</button>
                    </div>
                </form>
                <div class="mt-4">
                    <div class="d-flex justify-content-center links">
                        No tienes una cuenta <a href="@Url.Action("Registrar","Acceso")" class="ml-2">Registrarse</a>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>